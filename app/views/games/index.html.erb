<h1>All Games</h1>
<div class="container">
  <div class="cards">
    <% @games.each do |game| %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path game.photo.key %>)">
          <div class="new">
            <p><%= game.name %></p>
            <% user_game =  current_user.user_games.find_by(game: game) %>
            <% if user_game.nil?  %>
              <%= link_to 'Like',  game_user_games_path(game), method: :post %>
             <% else %>
              <%= link_to 'Remove like', user_game_path(user_game), method: :delete %>
            <% end %>
          </div>
        </div>
    <% end %>
  </div>
</div>



<div class="topspace">

<div><h1>Hello</h1>
  <%= cl_image_tag @game.photo.key, height: 300, width: 400, crop: :fill %>
    <div><h2><%= @game.name %> </h2>
        <div>
            <ul><% @posts.each do |post| %>
                <li>
                  <% if post.photo.attached? %>
                    <%= cl_image_tag post.photo.key, height: 300, width: 40, crop: :fill %>
                  <% end %>
                <%= post.content %>
                <%= simple_form_for [@game,post,@comment] do |f| %>
                  <%= f.input :content%>
                  <%= f.submit :submit  %>
                <% end %>
                </li>
                <% post.comments.each do |comment| %>
                <ul>
                  <li>
                    <%= comment.content %>
                    <%= link_to 'Delete', comment_path(comment), method: :delete %>
                  </li>
                </ul>
                <% end %>
            <% end %>
            </ul>
        </div>
    </div>
</div>

<h1>#<%= @game.chats.first.name %></h1>
<div id="messages" data-chatroom-id="<%= @game.chats.first.id %>">
  <% @game.chats.first.messages.each do |message| %>
    <div class="message-container" id="message-<%= message.id %>">
      <i class="author">
        <span><%= message.user.email%></span>
        <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
      </i>
      <p><%= message.message %></p>
    </div>
  <% end %>

  <%= simple_form_for [ @game.chats.first, @message ], remote: true do |f| %>
    <%= f.input :message, label: false, placeholder: "Message ##{@game.chats.first.name}" %>
    <%= f.submit %>
  <% end %>
  
</div>
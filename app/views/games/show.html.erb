
<div><h1>Hello</h1>
  <%#= cl_image_tag @game.photo.key, height: 300, width: 400, crop: :fill %>
    <div><h2><%= @game.name %> </h2>
        <div>
            <ul><% @game.posts.each do |post| %>
                <li>
                  <%#= cl_image_tag post.photo.key, height: 300, width: 400, crop: :fill %>
                <%= post.content %>
                <%= simple_form_for [@game,post,@comment] do |f| %>
                  <%= f.input :content %>
                  <%= f.submit :submit  %>
                <% end %>
                </li>
                <% post.comments.each do |comment| %>
                <ul>
                  <li>
                    <%= comment.content %>
                    <%= link_to 'Delete', comment_path(comment), method: :delete %>
                  </li>
                </ul>
                <% end %>
            <% end %>
            </ul>
        </div>
    </div>
</div>

